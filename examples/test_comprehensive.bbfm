// Comprehensive test demonstrating all parser fixes:
// 1. Field names matching type keywords (timestamp, timespan, etc.)
// 2. Invariants with all literal types (Int, Real, String, Bool)
// 3. Timestamp/Timespan support in invariants (using Real literals)

class ComprehensiveTest {
    // Field names that match type keywords - now works!
    feature timestamp: Timestamp;
    feature timespan: Timespan;
    feature int: Int;
    feature real: Real;
    feature string: String;
    feature bool: Bool;

    // Regular fields
    feature count: Int;
    feature price: Real;
    feature name: String;
    feature active: Bool;

    // Invariants with all literal types
    invariant validTimestamp: timestamp >= 0.0;      // Timestamp with Real literal
    invariant validTimespan: timespan > 0.0;         // Timespan with Real literal
    invariant validInt: int >= 0;                    // Int field with Integer literal
    invariant validReal: real <= 100.5;              // Real field with Real literal
    invariant validString: string != "";             // String field with String literal
    invariant validBool: bool == true;               // Bool field with Bool literal

    // More complex invariants
    invariant validCount: count >= 1;
    invariant maxPrice: price <= 999.99;
    invariant nonEmptyName: name != "";
    invariant isActive: active == true;
}
